# AWS S3 Configuration
AWS_BUCKET_NAME="vm-media-storage"
AWS_BUCKET_REGION="us-east-1"
AWS_PUBLIC_KEY="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_KEY="YOUR_AWS_SECRET_ACCESS_KEY"

# AWS CloudFront Configuration
AWS_CLOUDFRONT_DOMAIN="https://your-distribution.cloudfront.net"
AWS_CLOUDFRONT_DISTRIBUTION_ID="YOUR_DISTRIBUTION_ID"

# AWS S3 para VMClass (si es diferente)
AWS_BUCKET_NAME_VMCLASS="vm-media-storage"
AWS_BUCKET_REGION_VMCLASS="us-east-1"
AWS_PUBLIC_KEY_VMCLASS="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_KEY_VMCLASS="YOUR_AWS_SECRET_ACCESS_KEY"

# AWS Rekognition
AWS_BUCKET_NAME_REKO="access-vm-aws"
AWS_BUCKET_REGION_REKO="us-east-1"
AWS_ACCESS_KEY_ID_REKO="YOUR_REKO_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY_REKO="YOUR_REKO_SECRET_KEY"

# MongoDB
MONGO_URI="mongodb://localhost:27017/vitalmove"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"

# Node Environment
NODE_ENV="development"
PORT=3000

# Frontend URL
FRONTEND_URL="http://localhost:3001"

# Email Configuration (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Firebase Admin (para notificaciones push)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"

# Transbank (Pagos)
TRANSBANK_COMMERCE_CODE="your-commerce-code"
TRANSBANK_API_KEY="your-api-key"
TRANSBANK_ENVIRONMENT="TEST" # TEST o PRODUCTION
